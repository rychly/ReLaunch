<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" android:background="@drawable/main_button">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iV_cover" android:layout_gravity="center_horizontal|top"
            android:layout_marginRight="5dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal|top" android:layout_weight="5">
        <TextView
                android:id="@+id/item_headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#000000"/>
        <TextView
                android:id="@+id/item_subHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000"
                />
    </LinearLayout>

</LinearLayout>